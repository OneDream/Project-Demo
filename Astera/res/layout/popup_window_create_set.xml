<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:orientation="vertical"
  android:background="#FFFFFF">
  <TextView android:id="@+id/title_color_picker" 
    		  android:layout_width="match_parent" 
    		  android:layout_height="wrap_content"
    		  android:background="#666666" 
    		  android:text="Create a new set"/>
  <RelativeLayout
  	android:layout_width="match_parent"
  	android:layout_height="wrap_content"
  	>
  		<TextView
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="Set #"
  			android:textColor="#000000"
  			android:layout_alignParentLeft="true"
  			/>
  		<Spinner
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_alignParentRight="true"
  			/>
  	</RelativeLayout>
  	<RelativeLayout
	  	android:layout_width="match_parent"
	  	android:layout_height="wrap_content">
  		<TextView
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="Size of Set"
  			android:textColor="#000000"
  			android:layout_alignParentLeft="true"
  			/>
  		<Spinner
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_alignParentRight="true"
  			/>
  	</RelativeLayout>
  	<RelativeLayout
  	android:layout_width="match_parent"
  	android:layout_height="wrap_content"
  	>
  		<TextView
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="Target lamps by"
  			android:textColor="#000000"
  			android:layout_alignParentLeft="true"
  			/>
  		<Spinner
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_alignParentRight="true"
  			/>
  	</RelativeLayout>
  	<RelativeLayout
  		android:layout_width="match_parent"
	  	android:layout_height="wrap_content">
	 	<Button
	 		android:id="@+id/button_prev_popup_window"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"
	 		android:text="Prev"
	 		android:layout_alignParentLeft="true"
	 		/>
	 	<Button
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"
	 		android:text="Next"
	 		android:layout_toRightOf="@+id/button_prev_popup_window"
	 		/>
	 	<Button
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"
	 		android:text="Save"
	 		android:layout_alignParentRight="true"/>
	 </RelativeLayout>
</LinearLayout>
